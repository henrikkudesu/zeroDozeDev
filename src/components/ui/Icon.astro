// src/components/ui/Icon.astro

// Extrai a propriedade 'name' dos props do componente
const { name } = Astro.props;

// Objeto que mapeia nomes de ícones para seus respectivos SVGs
// Cada chave é o nome do ícone e o valor é o código SVG correspondente
const icons: Record<string, string> = {
  // Ícone de estratégia - forma geométrica com linhas
  strategy: `<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor"><path d="M12 2L2 7l10 5 10-5-10-5zM2 17l10 5 10-5M2 12l10 5 10-5"></path></svg>`,
  // Ícone de desenvolvimento web - tela com círculo central
  'web-dev': `<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor"><path d="M4 6h16v10H4z"/><circle cx="12" cy="12" r="2"/></svg>`,
  // Ícone de design - círculo com ponto de interrogação
  design: `<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor"><path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm0 18c-4.41 0-8-3.59-8-8s3.59-8 8-8 8 3.59 8 8-3.59 8-8 8zm0-14c-2.21 0-4 1.79-4 4h2c0-1.1.9-2 2-2s2 .9 2 2c0 2-3 1.75-3 5 0 .55.45 1 1 1h4c.55 0 1-.45 1-1 0-2.25-3-2.5-3-5 0-2.21 1.79-4 4-4z"/></svg>`,
  // Ícone de suporte - círculo com ponto de interrogação
  support: `<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor"><path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm1 17h-2v-2h2v2zm2.07-7.75l-.9.92C13.45 12.9 13 13.5 13 15h-2v-.5c0-1.1.45-2.1 1.17-2.73l1.09-1.09C11.83 10.55 11 9.36 11 8c0-2.21 1.79-4 4-4s4 1.79 4 4-1.79 4-4 4c-1.36 0-2.55-.83-3.17-2.03z"/></svg>`,
};
---

<!-- Renderiza o ícone SVG baseado no nome fornecido -->
<div set:html={icons[name]} />
