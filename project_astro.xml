document.querySelectorAll('a[href^="#"]').forEach((anchor) => {
  anchor.addEventListener(
    'click',
    function (this: HTMLAnchorElement, e: Event) {
      e.preventDefault();
      const target = this.getAttribute('href');
      if (target) {
        document.querySelector(target)?.scrollIntoView({
          behavior: 'smooth',
        });
      }
    }
  );
});
